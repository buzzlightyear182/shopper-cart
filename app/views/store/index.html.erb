<div class="col-xs-12 col-sm-8">
  <h3><%= t('.header_html') %></h3>
  <% cache ['store', Product.latest] do %>
    <% @products.each do |product| %>
      <% cache ['entry', product] do %>
        <div class="entry col-sm-4">
          <%= image_tag product.image(:medium) %>
          <h4><%= link_to product.title, product_path(id: product.id) %></h4>
          <p><%= truncate(strip_tags(product.body), length: 80) %></p>
          <p><%= sprintf("Php%0.02f", product.price) %></p>
          <%= button_to t('.add_html'), line_items_path(product_id: product.id), :class => "btn btn-primary" %>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= render 'components/sidebar' %>
