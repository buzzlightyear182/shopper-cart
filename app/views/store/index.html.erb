<% if notice %>
  <div class="alert alert-dismissable alert-success">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<div class="well" id="store_header">
  <h1>Shopper<br/><small>We sell books made for the creative person in you <i class="mdi-action-favorite"></i></small></h1>
</div>

<div class="well col-xs-12 col-sm-8">
  <h3>Listing Products</h3>
  <% cache ['store', Product.latest] do %>
    <% @products.each do |product| %>
      <% cache ['entry', product] do %>
        <div class="entry col-sm-4">
          <%= image_tag product.image(:medium) %>
          <h4><%= link_to product.title, product_path(id: product.id) %></h4>
          <p><%= truncate(strip_tags(product.body), length: 80) %></p>
          <p><%= sprintf("Php%0.02f", product.price) %></p>
          <%= button_to "Add to cart", line_items_path(product_id: product.id), :class => "btn btn-primary" %>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="well col-xs-12 col-sm-4 sidebar">
  <h3>Admin Panel</h3>
  <ul class="nav nav-pills nav-stacked">
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to "View products", products_path %></li>
    <li><%= link_to 'New Product', new_product_path %></li>
  </ul>
</div>
