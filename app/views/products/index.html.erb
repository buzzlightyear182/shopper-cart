<p id="notice"><%= notice %></p>
<div class='col-sm-8'>
  <h1>Product Listing</h1>
</div>
<div class='col-sm-4'>
  <%= go_back %>
  <%= new_product %>
</div>
<div class='col-sm-12'>
<table class="table table-striped table-hover ">
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="col-sm-2"><%= image_tag product.image(:thumb) %></td>
        <td class="col-sm-5">
          <h4><%= link_to product.title, product_path(id: product.id) %></h4>
          <p><%= truncate(strip_tags(product.body), length: 80) %></p>
        </td>
        <td class="col-sm-2"><p>Php <%= product.price %></p></td>
        <td class="col-sm-1"><%= link_to 'Show', product %></td>
        <td class="col-sm-1"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="col-sm-1"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
