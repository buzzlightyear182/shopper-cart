<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th colspan="3">Items for sale</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="col-xs-2"><%= image_tag product.image(:thumb) %></td>
        <td class="col-xs-4">
          <dl>
            <dt><%= product.title %></dt>
            <dd><%= truncate(strip_tags(product.body), length: 80) %></dd>
          </dl>
        </td>
        <td class="col-xs-2">Php <%= product.price %></td>
        <td class="col-xs-1"><%= link_to 'Show', product %></td>
        <td class="col-xs-1"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="col-xs-1"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

