<% if @product.errors.any? %>
  <div id="error_explanation" class="alert alert-dismissable alert-danger">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>
    <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @product, :html => {:class => 'new_product form-horizontal'} do |f| %>

  <div class="form-group">
    <%= f.label :title, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :body, :class => "form-control", :rows => 3  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.file_field :image, :id=>"inputFile", :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :price, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= link_to 'Back', :back, :class=>"btn btn-default" %>
      <%= f.submit "Create product", :class => "btn btn-primary btn-raised" %>
    </div>
  </div>
<% end %>
