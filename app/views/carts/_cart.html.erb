<h2>Your Cart</h2>
<table class="table table-striped table-hover cart_table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Qty</th>
      <!-- <th>Unit Price</th> -->
      <th>Price</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <%= render cart.line_items %>
    <tr>
      <td></td>
      <td>Total Price</td>
      <!-- <td></td> -->
      <td></td>
      <td><%= sprintf("Php%0.02f", cart.total_price) %></td>
      <td></td>
    </tr>
  </tbody>
</table>

<%= button_to "Checkout", new_order_path, method: :get, :class => 'btn btn-success' %>
<%= button_to "Empty cart", cart, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
